<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:elevation="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/mainpagetxt1"
        android:textColor="#ffffff" />

    <com.timqi.sectorprogressview.ColorfulRingProgressView
        android:id="@+id/crpv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        app:bgColor="@color/background"
        app:fgColorEnd="@color/colorAccent"
        app:fgColorStart="@color/colorAccent"
        app:startAngle="0"
        app:strokeWidth="21dp" />

    <TextView
        android:id="@+id/percenttxtmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="72dp"
        android:text="65%"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="471dp"
        android:layout_height="477dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-250dp"
        android:layout_marginTop="-198dp"
        app:srcCompat="@drawable/img2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="42dp"
        android:drawablePadding="8dp"
        android:drawableEnd="@drawable/miscellaneous"
        android:text="@string/mainpagetxt2"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/depttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="@string/mainpagetxt3"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/attendancebutt"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="277dp"
        android:background="@drawable/buttons"
        android:drawableStart="@drawable/student"
        android:drawablePadding="-30dp"
        android:elevation="30dp"
        android:gravity="center"
        android:textSize="12sp"

        android:text="@string/attendancetxt"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <Button
        android:id="@+id/halbookbutt"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="277dp"
        android:background="@drawable/buttons"
        android:drawableStart="@drawable/armchair"
        android:drawablePadding="-20dp"
        android:elevation="30dp"
        android:gravity="center"
        android:text="@string/hallbooktxt"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <Button
        android:id="@+id/placementbutt"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="325dp"
        android:background="@drawable/buttons"
        android:drawableStart="@drawable/cap"
        android:drawablePadding="-20dp"
        android:elevation="30dp"
        android:gravity="center"
        android:text="@string/placementtxt"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <Button
        android:id="@+id/Semeresbutt"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="325dp"
        android:background="@drawable/buttons"
        android:drawableStart="@drawable/target"
        android:drawablePadding="-20dp"
        android:elevation="30dp"
        android:gravity="center"
        android:text="@string/resulttxt"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:textStyle="italic" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="360dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:id="@+id/workshoptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workshoptxt"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:elevation="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/workshop0"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/workshop1"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/workshop2"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/semiarstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seminartxt"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:elevation="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"/>

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/web0"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/web1"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/web3"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:id="@+id/semiantxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upcometxt"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:elevation="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"/>

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/webinar1"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/webinar2"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="25dp"
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/webinar3"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img5"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>